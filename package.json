{
  "name": "virtualbox-extension",
  "displayName": "virtualbox-extension",
  "description": "Extension allows to manage your VMs right from Visual Studio Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.44.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:vb-machines",
    "onCommand:virtualbox-extension.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "virtualbox-extension.runVM",
        "category": "Virtual Box",
        "title": "Run Virtual Machine",
        "icon": "$(run)"
      },
      {
        "command": "virtualbox-extension.refreshVms",
        "category": "Virtual Box",
        "title": "Refresh Virtual Machines explorer",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "virtual-box-explorer",
          "title": "Virtual Machines",
          "icon": "resources/virtualbox.svg"
        }
      ]
    },
    "views": {
      "virtual-box-explorer": [
        {
          "id": "vb-machines",
          "name": "Virtual Machines"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "virtualbox-extension.refreshVms",
          "group": "navigation",
          "when": "view == vb-machines"
        }
      ],
      "view/item/context": [
        {
          "command": "virtualbox-extension.runVM",
          "group": "inline",
          "when": "viewItem == vmStopped && view == vb-machines"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.44.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "virtualbox": "^1.0.0"
  }
}
